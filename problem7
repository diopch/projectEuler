#include <iostream>
#include <string>

class A
{
 public:
bool isPrime(long long int nr) {
    if (nr < 3) return nr == 2;
    if (nr % 2 == 0) return false;
    for (int i = 3; i * i <= nr; i += 2)  // or calc sqnr = sqrt(nr) and use i <= sqnr
        if (nr % i == 0)
            return false;
    return true;
}

int NextPrime(long long int a)
{

    while (!isPrime(++a))
    { }
    return a;
}

};
int main()
{
    A a;
  long long int prime = 2 ;
  for(long long int i = 2; i < 10002; i++ )
  {
    prime = a.NextPrime(prime) ;
  }

  std::cout << "prime : " << prime << "!\n";
}
