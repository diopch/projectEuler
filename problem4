// Example program
#include <iostream>
#include <string>

class A 
{
public :
bool palindrome6 (int entier)
{
    bool result = false;
    int a1 = entier%10;
    int a2 = entier/100000;
    int b =((entier - a1)/10)-10000*a2;
    int b1 = b%10;
    int b2 = b/1000;
    int c = ((b - b1)/10)-100*b2;
    int c1 = c%10;
    int c2 = c/10;
    
    if(a1==a2 && b1==b2 && c1==c2)
    { result= true;}
    return result;
}

void max(int& p, int entier)
{
    if(entier > p)
    {p= entier;
     std::cout << "palindrome " << entier << "!\n";}
    }

};

int main()
{   
    A a;
    int p = 0;
    for(int i = 100; i<1000; i++)
    {
    for(int j = 100; j<1000; i++)
    {
     if(a.palindrome6(i*j))
      {
        a.max(p,i*j);
      }
    }
    }
  
  std::cout << "palindrome final :" << p << "!\n";
}
